<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:padding="8dp"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:backgroundTint="@color/design_default_color_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="162dp">

        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="374dp"
            android:layout_height="105dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/apple_cat_img" />

        <TextView
            android:id="@+id/list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="288dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="295dp"
            android:layout_marginBottom="19dp"
            android:text="$9.99"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/list_item_priceMetric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="331dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="295dp"
            android:layout_marginBottom="19dp"
            android:text="per KG"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="295dp"
            android:layout_marginBottom="19dp"
            android:text="Gala Apples"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_producer"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="5dp"
            android:text="Yuwei's Orchard" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>